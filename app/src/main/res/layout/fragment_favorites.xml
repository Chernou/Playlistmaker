<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media.ui.FavoritesFragment">

    <FrameLayout
        android:id="@+id/empty_media_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_24"
        app:fontFamily="@font/ys_display_medium">

        <ImageView
            android:id="@+id/empty_media_image"
            android:layout_width="@dimen/size_120"
            android:layout_height="@dimen/size_120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_86" />

        <TextView
            android:id="@+id/empty_media_text"
            android:layout_width="@dimen/size_312"
            android:layout_height="wrap_content"
            android:text="@string/empty_media_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_224"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_horizontal"
            android:textSize="19sp"
            app:fontWeight="@dimen/font_weight_settings" />

    </FrameLayout>

</LinearLayout>