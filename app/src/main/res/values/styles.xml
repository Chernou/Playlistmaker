<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonsStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/minimum</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">"@drawable/ic_ripple_effect"</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_main</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin_main_buttons</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/start_padding_settings_menu_items</item>
        <item name="android:paddingTop">@dimen/vertical_padding_settings_menu_items</item>
        <item name="android:paddingBottom">@dimen/vertical_padding_settings_menu_items</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="drawableTint">@color/settings_icons</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

</resources>